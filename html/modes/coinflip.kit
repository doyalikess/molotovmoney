<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="Ludzik">
    <meta name="description" content="CSGO Gambling website.">
    <meta name="keywords" content="CSGO, Cases, Upgrader, Roulette, Crash.">
    <title>ezSkins - Coinflip</title>
    <link rel="shortcut icon" href="../dist/img/favicon.jpg" type="image/x-icon">
    <!-- @import "../link.kit" -->
</head>

<body>
    <!-- @import "../nav-cases.kit" -->
    <main class="main">
        <!-- @import "../lastdrops.kit" -->
        <div class="wrapper">
            <div class="main__container">
                <h2 class="section__title section__title--cases"><span class="section__title-bg">Coinflip</span></h2>
                <div class="coinflip__container">
                    <div class="coin-container">
                        <div class="coin" id="coin">
                            <div class="side heads">
                                <img src="../dist/img/ct-icon.jpg" alt="CT Side">
                            </div>
                            <div class="side tails">
                                <img src="../dist/img/t-icon.jpg" alt="T Side">
                            </div>
                        </div>
                    </div>

                    <div class="gamemode__inputs">
                        <input type="number" class="gamemode__input" value="0">
                        <button class="gamemode__btn" id="clear">clear</button>
                        <button class="gamemode__btn" id="last">last</button>
                        <button class="gamemode__btn" id="+1">+1</button>
                        <button class="gamemode__btn" id="+10">+10</button>
                        <button class="gamemode__btn" id="+100">+100</button>
                        <button class="gamemode__btn" id="+1000">+1000</button>
                        <button class="gamemode__btn" id="1/2">1/2</button>
                        <button class="gamemode__btn" id="x2">x2</button>
                        <button class="gamemode__btn" id="max">max</button>
                    </div>
                    <div class="coinflip__buttons">
                        <button class="normal-btn coinflip__btn" id="ct">bet <img class="coinflip__btn-img"
                                src="../dist/img/ct-icon.jpg" alt="ct icon"></button>
                        <button class="normal-btn coinflip__btn" id="t">bet <img class="coinflip__btn-img"
                                src="../dist/img/t-icon.jpg" alt="t icon"></button>
                    </div>
                    <div class="coinflip__lastdrops">
                        <p class="coinflip__title">Last drops</p>
                        <p class="coinflip__text">Total: <span id="total">0.00$</span></p>
                        <div class="coinflip__lastdropsbox">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <!-- @import "../footer.kit" -->
    <script src="https://www.gstatic.com/firebasejs/8.10.0/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.10.0/firebase-database.js"></script>
    <script src="../dist/js/firebase.min.js"></script>
    <script src="../dist/js/last-drops.min.js"></script>
    <script src="../dist/js/balance.min.js"></script>
    <script src="../dist/js/modes/coinflip.min.js"></script>
    <script src="../dist/js/account.min.js"></script>
    <script src="../dist/js/script.min.js"></script>